{
  "name": "Sources de confiance",
  "description": "Villes Internet et la Banque Française Mutualiste vous proposent de faciliter l'identification des sources de confiance dans vos résultats de recherche",
  "version": "0.1",
  "manifest_version": 2,
  "icons": {
    "24": "assets/icons/picto_sdc-24px.png",
    "48": "assets/icons/picto_sdc-48px.png",
    "128": "assets/icons/picto_sdc-128px.png"
  },
  "browser_action": {
    "default_title": "Sources de confiance",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"]
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },

  "content_scripts": [
    {
      "matches": ["https://www.google.com/search*", "https://www.google.fr/search*"],
      "js": ["browser-polyfill.js", "inject.js"]
    }
  ],
  "permissions": ["tabs"],

  "web_accessible_resources": ["assets/icons/picto_sdc-24px.png", "assets/icons/picto_sdc-48px.png", "assets/icons/*.png"]
}
